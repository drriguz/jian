extends ../layout/admin-lte

block content
    div.row: div.col-md-10
        form.form(role='form', method='post', action='/admin/import.action')
            div.form-group
                label(for='url') Tecent Weibo URL
                input.form-control(id='url', name='url', type='text', value='http://t.qq.com/solever?gall=1')
