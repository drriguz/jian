extends ../layout

let x = 1
block content
    h1= 'Creating new user'
    .row
        .col-md-10
            form(action='/users/doAdd', method='post', role='form')
                div.form-group
                    label(for='name') Name
                    input.form-control(type='text', name='name', required, placeholder='Please enter your name')
                div.form-group
                    label(for='email') Email
                    input.form-control(type='email', name='email', required, placeholder='Please enter your email address')
                div.form-group
                    label(for='password') Password
                    input.form-control(type='password', name='password', required, placeholder='Create a password')
                div.form-group
                    label(for='remark') Remark
                    textarea.form-control(type='text', name='remark', placeholder='')
                button.btn.btn-primary(type='submit') Submit
